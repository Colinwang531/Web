@model ShipWeb.Models.Camera

@{
    ViewData["Title"] = "Edit";
}
<h4>修改摄像机</h4>
<hr />
<div>
    <a asp-action="Index" asp-route-id="@Model.EmbeddedId">返回列表</a>
</div>
<script type="text/javascript">
    function ChoseNull() {
        var index = $("#txtIndex").val();
        var nickName = $("#txtNickName").val();
        var ip = $("#txtIp").val();
        if (index == undefined || index == "") {
            alert("摄像机序号不能为空");
            return false;
        }
        if (nickName == undefined || nickName == "") {
            alert("摄像机别名不能为空");
            return false;
        }
        if (ip == undefined || ip == "") {
            alert("摄像机IP不能为空");
            return false;
        }
        return true;
    }
</script>
<div class="row">
    <div>
        <form asp-action="EditSave" onsubmit="return ChoseNull()">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Cid" />
            <input type="hidden" asp-for="EmbeddedId" />
            <input type="hidden" asp-for="ShipId" />        
            <div class="form-group">
                <label class="control-label">摄像机序号</label>
                <input asp-for="Index"id="txtIndex" type="number" class="form-control" />
                <span asp-validation-for="Index" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="control-label">摄像机状态</label>
                @Html.RadioButtonFor(model => model.Enalbe, true) 开启
                @Html.RadioButtonFor(model => model.Enalbe, false) 关闭
            </div>
            <div class="form-group">
                <label class="control-label">摄像机别名</label>
                <input asp-for="NickName" id="txtNickName" maxlength="20" class="form-control" />
                <span asp-validation-for="NickName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">摄像机IP</label>
                <input asp-for="IP" id="txtIp" maxlength="20" class="form-control" />
                <span asp-validation-for="IP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="保存" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



