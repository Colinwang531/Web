

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="renderer" content="webkit|ie-comp|ie-stand" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="bookmark" href="/favicon.ico" />
    <title>@ViewBag.Title</title>
    <link href="/css/main.css" rel="stylesheet" />
    <link href="/scripts/layui/css/layui.css" rel="stylesheet" />
    <link href="/fontawesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="/fontmoduleicon/FontIcon.css" rel="stylesheet" />
</head>
<body class="layui-layout-body">   
    <div class="layui-layout layui-layout-admin">
        <div class="layui-header">
            <div class="layui-logo">禹创智能科技</div>
            <ul class="layui-nav layui-layout-left">
            </ul>
            <ul class="layui-nav layui-layout-right">
                <li class="layui-nav-item">
                    欢迎您：@ViewBag.LoginName
                    @*<a href="javascript:;">
                        <img src="~/images/head/user.png" class="layui-nav-img">
                        小福泥
                    </a>
                    <dl class="layui-nav-child">
                        <dd><a href="">基本资料</a></dd>
                        <dd><a href="">安全设置</a></dd>
                    </dl>*@
                </li>
                <li class="layui-nav-item"><a href="/Login/SignOut">退了</a></li>
            </ul>
        </div>

        <div class="layui-side layui-bg-black">
            <div class="layui-side-scroll">
                <!-- 左侧导航区域 -->
                <ul class="layui-nav layui-nav-tree" lay-filter="test">                    
                    @if(ViewBag.IsLandHome)
                    {
                        <li class="layui-nav-item"><a href="/Home/LandHome"><red>返回</red> </a></li>
                    }
                    <li class="layui-nav-item device"><a href="#">设备</a></li><!--/Embedded/Index-->
                    <li class="layui-nav-item algorithm"><a href="#">算法配置</a></li>
                    <li class="layui-nav-item crew"><a href="#">船员</a></li>
                    <li class="layui-nav-item ship"><a href="#">航行设置</a></li><!--/Ship/Edit-->
                    @if (ShipWeb.Tool.ManagerHelp.IsShowAlarm)
                    {
                        <li class="layui-nav-item alarm"><a href="#">报警</a></li>
                        <li class="layui-nav-item attendance"><a href="#">考勤</a></li>
                    }
                </ul>
            </div>
        </div>

        <div class="layui-body">
            <iframe id="frm" src="" style="width:100%;height:98%">
                <!-- 内容主体区域 -->
                @RenderBody()
            </iframe>           
        </div>

        <div class="layui-footer">底部信息 @($"{ShipWeb.Tool.DateTimeExtentions.ToCstTime(DateTime.Now).ToString("yyyy-MM-dd HH:mm:ss")}") , 您好 King Yu 禹创智能科技</div>
    </div>
    <script src="/scripts/layui/layui.js" type="text/javascript"></script>
    <script src="/scripts/layui/global.js" type="text/javascript"></script>
    <script>
        layui.use('element', function () {
            var $ = layui.jquery
                , element = layui.element;
            $(".device").click(function () {
                $("#frm").attr("src", "/Device/Index")
            });
            $(".algorithm").click(function () {
                $("#frm").attr("src", "/Algorithm/Index")
            });
            $(".crew").click(function () {
                $("#frm").attr("src", "/Crew/Index")
            });
            $(".ship").click(function () {
                $("#frm").attr("src", "/Ship/Edit")
            });
            $(".alarm").click(function () {                
                $("#frm").attr("src", "/Alarm/Index?isShow=false")
            });
            $(".attendance").click(function () {
                $("#frm").attr("src", "/Attendance/Index")
            });
        });
        
    </script>
</body>
</html>

