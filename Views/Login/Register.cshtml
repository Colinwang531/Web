
@{
    ViewData["Title"] = "Register";
}
<script type="text/javascript">
    function Register() {
        var uid = $("#txtUid").val();
        var pwd = $("#txtPwd").val();
        var pwdsure = $("#txtPwdSure").val();
        if (uid == undefined || uid == "" || uid == null) {
            alert("用户名不能为空");
        }
        if (pwd == undefined || pwd == "" || pwd == null) {
            alert("密码不能为空");
        }
        if (pwd != pwdsure) {
            alert("前后两次输入的密码不一致");
        }
        var data = {
            Name=uid,
            Password=pwd
        }
        $.ajax({
            url: "/Login/Save",
            data: JSON.stringify(data),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            type: "post",
            success: function (res) {
                alert(res);
            }
        })
    }

</script>
<h1>Register</h1>
<div class="row">
    <div class="col-md-4">
        @*<form asp-action="Save()">*@
            <div class="form-group">
                <label class="control-label">用户名</label>
                <input class="form-control" id="txtUid" />
            </div>
            <div class="form-group">
                <label class="control-label">请输入密码</label>
                <input  class="form-control" id="txtPwd" />
            </div>
            <div class="form-group">
                <label class="control-label">请确认密码</label>
                <input  class="form-control" id="txtPwdSure" />
            </div>
            <div class="form-group">
                <input type="submit" value="注册" class="btn btn-primary" onclick="Register()" />
            </div>
        @*</form>*@
    </div>
</div>
