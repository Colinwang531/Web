

@model ShipWeb.Models.User
@{
    Layout = null;
}
<link href="~/layui/css/layui.css" rel="stylesheet" />
<script src="~/lib/jquery/dist/jquery.js"></script>
<script type="text/javascript">
    $(document).keydown(function (event) {
        //enter键执行确认
        if (event.keyCode == 13) {
            Login();
        }
    });
    function Login() {
        var name = $("#txtName").val().trim();
        var pwd = $("#txtPwd").val().trim();
        if (name == undefined || name == "" || name == null) {
            alert("用户名不能为空");
            return;
        }
        if (pwd == undefined || pwd == "" || pwd == null) {
            alert("密码不能为空");
            return;
        }
        $.ajax({
            url: "/Login/UserLogin",
            data: { name: name, password: pwd },
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            type: "get",
            success: function (res) {
                if (res.code == 1) {
                    alert(res.msg);
                } else {
                    var type = $("#slType").val(); //$(':radio[name="rdo"]:checked').val();
                    if (type == 1) {
                        if (res.flag) {
                            window.location.href = "/Alarm/Index?isShow=true";//如果船存在就跳到报警页面
                        }
                        else {
                            window.location.href = "/Ship/Edit?isShow=true";//船不存在就先添加船
                        }
                    } else {
                        window.location.href = "/Home/LandHome";
                    }
                }
            }
        })
    }
</script>
<body style="height:100%;width:100%; position: relative;">
    <div style=" position: absolute;top: 39%;left: 40%;margin-left: -40px;margin-top: -39px;">
        <div class="layui-inline">
            <table style="margin: 0 auto;height:350px">
                <tr>
                    <td colspan="2">
                        <img src="~/images/timg.jpg" style="width:300px;height:150px" />
                    </td>
                </tr>
                <tr>
                    <td align="center">用户名</td>
                    <td><input type="text" name="username" id="txtName" lay-verify="required" placeholder="请输入" autocomplete="off" class="layui-input"></td>
                </tr>
                <tr>
                    <td align="center">密码</td>
                    <td> <input type="password" name="password" lay-verify="pass" placeholder="请输入密码" id="txtPwd" autocomplete="off" class="layui-input"></td>
                </tr>
                <tr>
                    <td align="center">类型</td>
                    <td>
                        <div class="layui-input-inline">
                            <select id="slType" style="height:38px;border:1px solid #fff;width:150px">
                                <option value="1">船舶</option>
                                <option value="2" selected="selected">陆地</option>
                            </select>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" style="text-align:center">
                        <input type="submit" value="确定" class="layui-btn" onclick="Login()" />
                    </td>
                </tr>
            </table>
        </div>
    </div>
</body>