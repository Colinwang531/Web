@model ShipWeb.Models.Ship
@{
    if (!ViewBag.isShow)
    {
        Layout = null;
    }
}
<link href="~/layui/css/layui.css" rel="stylesheet" />
<script src="~/layui/layui.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script type="text/javascript">
    layui.use('form', function () {
        var $ = layui.$;
        var form = layui.form;
        load();
        form.on("radio", function (data) {
            //自动时不可选择航行状态
            if (data.value == "2") {
                $('select').attr('disabled', 'disabled').css("background-color", "#EEEEEE");
            } else {
                $('select').removeAttr("disabled").removeClass("background-color");
            }
            form.render('select');
        });
        //监听提交
        form.on('submit(doSubmit)', function (frm) {
            var data = {
                id: frm.field.id,
                name: frm.field.name,
                type: parseInt(frm.field.type),
                flag: frm.field.flag
            }
            $.ajax({
                url: "/Ship/Save",
                data: data,
                type: "get",
                dataType: "json",
                contentType: "application/json;charset=utf-8",
                success: function (res) {
                    if (res.code == 0) {
                        layer.msg("保存成功",{ icon: 1 });
                        var hid = $("#hidId").val();
                        if (hid == undefined || hid=="") {
                            load();
                        }
                    } else {
                        layer.msg(res.msg, { icon: 2 });
                    }
                }
            });
            return false;
        });
        function load() {
            $.ajax({
                url: "/Ship/Load",
                data: {},
                type: "get",
                dataType: "json",
                contentType: "application/json;charset=utf-8",
                success: function (res) {
                    if (res.code == 0) {
                        if (res.data != null) {
                            form.val("dataFrm", {
                                "id": res.data.id,
                                "name": res.data.name,
                                "type": res.data.type,
                                "flag": res.data.flag ? 1 : 2
                            });
                            if (res.data.type==2) {
                                $('select').attr('disabled', 'disabled').css("background-color", "#EEEEEE");
                                form.render();
                            }
                        }
                        if (res.isSet) {
                            var html = ' <button type="submit" class="layui-btn layui-btn-normal layui-btn-sm layui-icon layui-icon-release" lay-filter="doSubmit" lay-submit="">提交</button>';
                            $("#divShow").html(html);
                        }
                    }
                }
            });
        }
    });
</script>
<div style="margin:10px">
    <h1>修改船信息</h1>
    <hr />
    <form class="layui-form" action="" id="dataFrm" lay-filter="dataFrm">
        <input name="id" id="hidId" type="hidden" class="layui-input" />
        <div class="layui-form-item" style="margin-top: 20px;">
            <div class="layui-inline">
                <label class="layui-form-label">船名称：</label>
                <div class="layui-input-inline">
                    <input type="text" id="txtName" name="name" required maxlength="20" lay-verify="required" autocomplete="off" class="layui-input">
                </div>
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-inline" style="margin-left:30px">
                <div class="layui-input-inline">
                    <input type="radio" name="type" value="2" title="自动航行设置" class="layui-input">
                    <input type="radio" name="type" value="1" title="手动航行设置" class="layui-input" checked="checked">
                </div>
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label">航行状态：</label>
                <div class="layui-input-inline">
                    <div class="layui-input-inline">
                        <select id="slStatus" name="flag" class="layui-input">
                            <option value="1">SAIL</option>
                            <option value="2">STOP</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-input-block" id="divShow">

                @*<button type="reset" class="layui-btn layui-btn-warm layui-btn-sm layui-icon layui-icon-refresh">重置</button>*@
            </div>

        </div>

    </form>
</div>
