@model ShipWeb.Models.Ship
@{
    ViewData["Title"] = "Index";
}
<h1>修改船信息</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Save">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" />
            <div class="form-group">
                <label class="control-label">船名称</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">航行类型</label>
                <select asp-for="Type">
                    <option value="1" selected="selected">SAIL</option>
                    <option value="2" selected="selected">AUTO</option>
                    <option value="3" selected="selected">NAME</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">航行状态</label>
                <input type="checkbox" checked="@Model.Flag" />
            </div>
            <div class="form-group">
                <input type="submit" value="保存" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<script type="text/javascript">
    var success = function (context) {
        alert(context);
    }
</script>

