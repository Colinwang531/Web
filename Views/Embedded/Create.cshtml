@model ShipWeb.Models.Embedded

@{
    ViewData["Title"] = "Create";
}

<h1>添加设备信息</h1>

<hr />
<div>
    <a asp-action="Index">返回列表</a>
</div>
<script type="text/javascript">
    function CheckNull() {
        var name = $("#txtName").val();
        var pwd = $("#txtPwd").val();
        var ip = $("#txtIp").val();
        var port = $("#txtPort").val();
        var nickName = $("#txtNickName").val();
        if (name == undefined || name == "") {
            alert("设备名称不能为空");
            return false;
        }
        if (pwd == undefined || pwd == "") {
            alert("设备登陆密码不能为空");
            return false;
        }
        if (ip == undefined || ip == "") {
            alert("设备IP不能为空");
            return false;
        }
        if (port == undefined || port == "") {
            alert("设备端口不能为空");
            return false;
        }
        if (nickName == undefined || nickName == "") {
            alert("设备别名不能为空");
            return false;
        }
        return true;
    }
</script>

    <div class="row">
            <div>
                <form asp-action="Save" onsubmit="return CheckNull()">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label">设备厂商</label>
                        <select asp-for="Factory" class="form-control">
                            <option value="1" selected="selected">HIKVISION 海康</option>
                            <option value="2">DAHUA 大华</option>
                            <option value="3">EATON 伊顿</option>
                        </select>
                        <span asp-validation-for="Factory" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">设备类型</label>
                        <select asp-for="Type" class="form-control">
                            <option value="1" selected="selected">DVR</option>
                            <option value="2">NVR</option>
                            <option value="3" selected="selected">IPC</option>
                        </select>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">设备登陆名称</label>
                        <input asp-for="Name" id="txtName" maxlength="100" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">设备登录密码</label>
                        <input asp-for="Password"  id="txtPwd" maxlength="100" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">设备IP地址</label>
                        <input asp-for="IP" id="txtIp" maxlength="20" class="form-control" />
                        <span asp-validation-for="IP" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">设备端口号</label>
                        <input asp-for="Port"id="txtPort" type="number" class="form-control" />
                        <span asp-validation-for="Port" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label class="control-label">设备别名</label>
                        <input asp-for="Nickname" id="txtNickName" maxlength="20" class="form-control" />
                        <span asp-validation-for="Nickname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="保存" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>


